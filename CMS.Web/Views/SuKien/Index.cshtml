<!-- Razo Event Area Start -->
<section class="razo-events-area section-padding-0-80">
    <div class="container">
        <div class="row">

            @for (int i = 0; i < danhSachSuKien.Count(); i++)
            {
                <!-- Single Razo Event Area -->
                <div class="col-12">
                    <div class="single-razo-event-area d-flex flex-wrap align-items-center mb-50 wow fadeInUp" data-wow-delay="100ms">
                        <!-- Thumbnail -->
                        <div class="event-thumbnail">
                            <img src="../../fileupload/download?key=@(danhSachSuKien[i].AnhDaiDien)" alt="">
                        </div>
                        <!-- Event Content -->
                        <div class="event-content d-flex align-items-center">
                            <div class="event-text">
                                <h5>@danhSachSuKien[i].TieuDe</h5>
                                <div class="event-meta">
                                    <a href="#" class="event-date"><i class="icon_calendar"></i> @danhSachSuKien[i].ThoiGianTu.ToLongDateString()</a>
                                    <a href="#" class="event-time"><i class="icon_clock_alt"></i> @danhSachSuKien[i].ThoiGianTu.ToShortTimeString() - @danhSachSuKien[i].ThoiGianDen.ToShortTimeString()</a>
                                    <a href="#" class="event-address"><i class="icon_pin_alt"></i> @danhSachSuKien[i].DiaDiem, @danhSachSuKien[i].XaPhuong.TenXaPhuong, @danhSachSuKien[i].QuanHuyen.TenQuanHuyen, @danhSachSuKien[i].TinhThanh.TenTinhThanh</a>
                                </div>
                                <p>@danhSachSuKien[i].MoTaNgan ...</p>
                                <a href="@Url.Action("ChiTietSuKien", "SuKien", new { id = danhSachSuKien[i].EventID })" class="btn read-more-btn">Xem thêm <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

        @*<div class="row">
            <div class="col-12 text-center">
                <a href="#" class="btn razo-btn mt-30">Load More</a>
            </div>
        </div>*@
    </div>
</section>
<!-- Razo Event Area End -->
