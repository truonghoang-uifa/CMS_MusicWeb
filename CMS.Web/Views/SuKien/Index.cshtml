@using CMS.Models;
@{
    ViewBag.Title = "Event";
    Event suKienMoiNhat = ViewBag.SuKienMoiNhat;
    List<Event> danhSachSuKien = ViewBag.DanhSachSuKien;
}
<!-- Preloader -->
<div id="preloader">
    <div>
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
        <span>Wait, please...</span>
    </div>
</div>
<!-- /Preloader -->
<!-- Event Welcome Area Start -->
<section class="event-welcome-area bg-overlay bg-img jarallax" style="background-image: url(img/bg-img/54.jpg);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-9">
                <div class="event-welcome-text text-center">
                    <span>Event start on @suKienMoiNhat.ThoiGianTu.ToLongDateString()</span>
                    <h2>@suKienMoiNhat.TieuDe</h2>
                    <p>@suKienMoiNhat.MoTaNgan</p>
                    <div class="coming-soon-clock mt-30 mb-30">
                        <div id="clock" style="color: white" value="@suKienMoiNhat.ThoiGianTu"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Event Welcome Area End -->
