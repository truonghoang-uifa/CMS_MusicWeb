                            <!-- Post Content -->
                            <div class="post-content">
                                <div class="post-meta">
                                    <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> <span class="fb-comments-count" data-href="/BaiViet/ChiTietBaiViet/@(dsChuyenMuc[1].ChuyenMuc_BaiViet.ToArray()[i].BaiVietID)"></span></a>
                                    <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @dsChuyenMuc[1].ChuyenMuc_BaiViet.ToArray()[i].BaiViet.LuotXem</a>
                                </div>
                                <a href="@Url.Action("ChiTietBaiViet", "BaiViet", new { id = @dsChuyenMuc[1].ChuyenMuc_BaiViet.ToArray()[i].BaiVietID })" class="post-title">@dsChuyenMuc[1].ChuyenMuc_BaiViet.ToArray()[i].BaiViet.TieuDe</a>
