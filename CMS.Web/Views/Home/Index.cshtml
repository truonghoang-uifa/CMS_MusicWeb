                                <div class="razo-single-post d-flex mb-30">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <a href="single-blog.html"><img style="height: 100px" src="/fileupload/download?key=@(dsChuyenMuc[0].ChuyenMuc_BaiViet.ToArray()[i].BaiViet.AnhDaiDien)" alt=""></a>
                                    </div>
                                    <!-- Post Content -->
                                    <div class="post-content">
                                        <div class="post-meta">
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> <span class="fb-comments-count" data-href="/BaiViet/ChiTietBaiViet/@(dsChuyenMuc[0].ChuyenMuc_BaiViet.ToArray()[i].BaiVietID)"></span></a>
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @dsChuyenMuc[0].ChuyenMuc_BaiViet.ToArray()[i].BaiViet.LuotXem</a>
                                        </div>
